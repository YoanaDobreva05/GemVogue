@model GemVogue.Models.Users.UserDetailsOutputModel

<div class="page-notification page-notification2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item">Администрация</li>
                        <li class="breadcrumb-item"><a asp-action="All">Потребители</a></li>
                        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></li>
                        <li class="breadcrumb-item">Редактирай</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<section class="contact-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h2 class="contact-title">Редактирай потребител</h2>
            </div>
            <div class="col-6">
                <form class="form-contact contact_form" method="post" asp-action="Update" asp-route-id="@Model.Id" id="contactForm">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <input class="form-control valid" asp-for="Name" name="name" value="@Model.Name" id="name" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Въведи име'" placeholder="Въведи име">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input class="form-control w-100" asp-for="Email" name="email" value="@Model.Email" id="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Въведи имейл'" placeholder=" Въведи имейл"></input>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="button button-contactForm boxed-btn">Обнови</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>