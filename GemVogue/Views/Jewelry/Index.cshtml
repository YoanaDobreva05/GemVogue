@model List<Jewel>

@{
    ViewData["Title"] = "List of Jewelry";
}

<div class="row">
    @foreach(var item in Model)
    {
       var days = (DateTime.Now - item.CreatedOn).Days;
       <div class="col-md-4 col-xs-6 border-primary mb-3"> 
           <div class="card-mb-3" style="max-width:540px"> 
               <div class="row g-0">
                   <div class="col-md-12">
                       <div class="card-header text-white bg-info">
                           <p class="card-text">
                               <h5 class="card-tittle">
                                   @item.Name
                                   <a class="text-white float-right"><i class="bg-info bi-pencil-square"></i></a>
                               </h5>
                           </p>
                        </div>
                   </div>
                   <div class="col-md-6">
                       <img src="@item.Image "width="100%" alt="@item.Name">
                   </div>
                   <div class="col-md-6">
                       <div class="card-body">
                           <p class="card-text">@item.Description.Substring(0, 45)...</p>
                           <p class="card-text"><b>Производител:</b> @item.Brand.FullName</p>
                           <p class="card-text"><b>Категория:</b>@item.Type</p>
                           <p class="card-text"><b>Дата на публикуване:</b>@item.CreatedOn.ToString("dd.MM.yyyy г.")</p>
                           <b>Качено:</b>
                           
                                <span class="badge bg-success text-white">Преди: @days дни</span>
                            
                           
                       </div>
                   </div>
                   <div class="col-md-12">
                       <div class="card-footer">
                           <p class="card-text">
                               <a class="btn btn-outline-primary float-right "><i class="bi bi-eye-fill"></i>Детайли</a>
                               <a class="btn btn-success text-white"><i class="bi bi-heart"></i>Добави в Любими</a>
                           </p>
                       </div>
                   </div>
               </div>
           </div>
       </div>
    }
</div>