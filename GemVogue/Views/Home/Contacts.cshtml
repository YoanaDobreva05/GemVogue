@model GemVogue.Models.Messages.CreateMessageInputModel

<div class="page-notification page-notification2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a asp-action="Index">Начало</a></li>
                        <li class="breadcrumb-item">Контакти</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Свържете се с нас</h2>
            </div>
            <div class="col-lg-8">
                <form class="form-contact contact_form" method="post" asp-controller="Home" asp-action="Contact" id="contactForm">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <textarea class="form-control w-100" asp-for="Content" name="content" id="message" cols="30" rows="9" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Въведи съобщение'" placeholder=" Въведи съобщение"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control valid" asp-for="Name" name="name" id="name" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Въведи име'" placeholder="Въведи име">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control valid" asp-for="Email" name="email" id="email" type="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" placeholder="Email">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input class="form-control" asp-for="Subject" name="subject" id="subject" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Въведи тема'" placeholder="Въведи тема">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="button button-contactForm boxed-btn">Изпрати</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>ул. "Сан Стефано", №1</h3>
                        <p>Пазарджик, България</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>support@gemvogue.com</h3>
                        <p>Изпратете съобщение по всяко време!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>