@model List<GemVogue.Models.Messages.MessageDetailsOutputModel>

<div class="section-top-border">
    <h3 class="mb-30">Съобщения</h3>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Име</th>
            <th scope="col">Имейл</th>
            <th scope="col">Тема</th>
            <th scope="col">Съобщение</th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <th scope="row">@message.Id</th>
                <td>@message.Name</td>
                <td>@message.Email</td>
                <td>@message.Subject</td>
                <td>@message.Content</td>
                <td>
                    <form method="post" asp-action="DeleteMessage" asp-route-id="@message.Id">
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
