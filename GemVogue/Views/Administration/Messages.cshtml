@model List<GemVogue.Models.Messages.MessageDetailsOutputModel>

<div class="page-notification page-notification2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item">Администрация</li>
                        <li class="breadcrumb-item">Съобщения</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Съобщения</h2>
            </div>
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Име</th>
                        <th scope="col">Имейл</th>
                        <th scope="col">Тема</th>
                        <th scope="col">Съобщение</th>
                        <th scope="col">Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var message in Model)
                    {
                        <tr>
                            <th scope="row">@message.Id</th>
                            <td>@message.Name</td>
                            <td>@message.Email</td>
                            <td>@message.Subject</td>
                            <td>@message.Content</td>
                            <td>
                                <form method="post" asp-action="DeleteMessage" asp-route-id="@message.Id">
                                    <button type="submit" class="btn btn-danger">Изтрий</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>