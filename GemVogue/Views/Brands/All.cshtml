@model IEnumerable<GemVogue.Models.Brands.BrandDetailsOutputModel>

<div class="page-notification page-notification2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Начало</a></li>
                        <li class="breadcrumb-item">Производители</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Производители</h2>
                @if (this.User.IsInRole("Administrator"))
                {
                    <a asp-action="Add">
                        <span class="text-primary">Добави</span>
                    </a>
                }
            </div>
            <div class="col-lg-12">
                <div class="popular-items pt-50">
                    <div class="d-flex flex-lg-wrap justify-content-start brands">
                            @foreach (var brand in Model)
                            {
                                <div class="w-21">
                                    <a asp-action="Details" asp-route-id="@brand.Id">
                                        <div class="single-popular-items text-center wow fadeInUp border h-100" data-wow-duration="1s" data-wow-delay=".1s">
                                            <div class="popular-img">
                                                <img src="@brand.ImageUrl" alt="">
                                                <div class="img-cap">
                                                <span class="font-size-16">@brand.Name</span>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>